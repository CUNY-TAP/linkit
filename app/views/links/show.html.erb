<%- model_class = Link -%>
 <div class="page-header">
   <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
 </div>

 <dl class="dl-horizontal">
   <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
   <dd><%= @link.url %></dd>
   <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
   <dd><%= @link.name %></dd>
   <dt><strong>User:</strong></dt>
   <dd><%= @link.user.email if @link.user %></dd>
   <dt><strong>Score:</strong></dt>
   <dd><%= format_value(@link.score) %></dd>
 </dl>
<hr>

<% if @link.comments.present? %>
<div class="comments">
  <h3>Comments:</h3>
    <% @link.comments.each do |comment| %>
      <h5><%= comment.created_at %></h5>
      <p><%= comment.comment %></p>
      <p>Votes: <%= comment.score %></p>
      <%= link_to "Vote Up", { controller: "comments", action: "voteUp", id: comment.id }, :class => 'btn btn-small' %>
      <%= link_to "Vote Down", { controller: "comments", action: "voteDown", id: comment.id }, :class => 'btn btn-small' %>
    <% end %>
</div>
<hr>
<% end %>
 <div class="form-actions">
  <%= link_to "Add Comment", 
    new_comment_path(:link_id => @link.id), :class => 'btn' %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
    links_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
    edit_link_path(@link), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
               link_path(@link),
               :method => 'delete',
               :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
               :class => 'btn btn-danger' %>
 </div>